<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="24dp"
    tools:context=".MainActivity">



        <ImageView
            android:id="@+id/loginImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/img_enter"
            android:contentDescription="@string/welcome_back"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/welcomeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/welcome_back"
            android:textSize="24dp"
            android:textColor="@color/black"
            android:fontFamily="sans-serif-medium"
            app:layout_constraintTop_toBottomOf="@id/loginImage"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="sign in to acces your account"
            android:textSize="14sp"
            android:layout_gravity="center"
            android:layout_marginTop="4dp"
            android:fontFamily="sans-serif-light"/>
        <EditText
            android:id="@+id/emilEditText"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Enter your Email"
            android:inputType="textEmailAddress"
            android:drawablePadding="8dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:background="#C4DEDADA"
            android:layout_marginTop="32dp"
            android:drawableEnd="@drawable/mail"/>
        <EditText
            android:id="@+id/passwordEditText"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Password"
            android:inputType="textPassword"
            android:drawablePadding="8dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:background="#C4DEDADA"
            android:drawableEnd="@drawable/lock"
            android:layout_marginTop="16dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:layout_gravity="center_vertical">
            <CheckBox
                android:id="@+id/rememberMeCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Remember Me"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/forgotPasswordTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Forgot Password ? "
                android:textColor="#6C63FF"
                android:layout_gravity="end"
                android:layout_weight="1"
                android:paddingEnd="8dp"/>
        </LinearLayout>

        <Button
            android:id="@+id/nectButton"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Next"
            android:backgroundTint="#6C63FF"
            android:textColor="@color/white"
            android:layout_marginTop="16dp"
            android:fontFamily="sans-serif-medium"
            android:drawableEnd="@drawable/arrow"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Member? Register Now"
            android:textSize="14sp"
            android:textColor="#6C63FF"
            android:layout_gravity="center"
            android:layout_marginTop="24dp"
            android:fontFamily="sans-serif-light"/>






</androidx.constraintlayout.widget.ConstraintLayout>